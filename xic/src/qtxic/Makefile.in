moc_prpinfo.o: moc_prpinfo.cpp  qtprpinfo.h
moc_sel.o: moc_sel.cpp  qtsel.h
moc_stab.o: moc_stab.cpp  qtstab.h
moc_xform.o: moc_xform.cpp  qtxform.h
moc_zoom.o: moc_zoom.cpp  qtzoom.h

