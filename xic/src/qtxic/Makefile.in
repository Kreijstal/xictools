moc_sel.cpp: $(MOC) qtsel.h
	$(MOC) qtsel.h -o moc_sel.cpp
moc_stab.cpp: $(MOC) qtstab.h
	$(MOC) qtstab.h -o moc_stab.cpp
moc_xform.cpp: $(MOC) qtxform.h
	$(MOC) qtxform.h -o moc_xform.cpp
moc_zoom.cpp: $(MOC) qtzoom.h
	$(MOC) qtzoom.h -o moc_zoom.cpp

depend:
	@echo depending in xic/qtxic
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(MOZYINC) $(TOOLKITINC) $(CCFILES) \
  $(FILTER) >> Makefile; \
	fi

mocclean:
	-@rm -f $(MOCOBJS)
	-@rm -f $(MOCFILES)

clean: mocclean
	-@rm -f *.o $(LIB_TARGET)

distclean: clean
	-@rm -f Makefile

resource.o: resource.cc xic.rc
	vers=$(GFX_VERSION); \
	IFS="$$IFS."; \
	set $$vers; \
	$(WINDRES) -DXIC_BIN_VERSION="0,$$1,$$2,$$3" \
 -DXIC_FILE_VERSION=\\\"$$1.$$2.$$3\\\" \
 -DXIC_PROG_VERSION=\\\"Xic-$$1.$$2.$$3\\\"  xic.rc resource_temp.o
	$(CC) -c -o restmp.o resource.cc
	$(LD) -r -o resource.o resource_temp.o restmp.o
	rm -f resource_temp.o restmp.o

#######################################################################
