#######################################################################
LOCATION = xic/src/qtxic
#######################################################################

GFX_VERSION = @GFX_VERSION@
DATE = @DATE@

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGSG@ @NEEDINT64@ @TOOLKITCFLAGS@ @UFLAGS@
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@ @NEEDINT64@ @TOOLKITCFLAGS@
WINDRES = @WINDRES@
AR = @AR@
LD = @LD@
RANLIB = @RANLIB@
FILTER = @FILTER@
USEMOZY = @USEMOZY@
TOOLKITINC = @TOOLKITINC@
RESOURCE = @RESOURCE@
MOC = @MOC@

LIB_TARGET = qtxic.a

BASE = ../../../xt_base
SECURE = ../../../secure
INCLUDE = -I. -I../../include -I$(BASE)/include -I$(SECURE)/include

CCFILES = \
    qtcolor.cc \
    qtcolortimer.cc \
    qtcoord.cc \
    qtdots.cc \
    qtempty.cc \
    qtexpand.cc \
    qtextfc.cc \
    qtextfh.cc \
    qtfiledlg.cc \
    qtfiles.cc \
    qtfillp.cc \
    qtflatten.cc \
    qtgrid.cc \
    qthtext.cc \
    qtjoin.cc \
    qtkeymacro.cc \
    qtkeymap.cc \
    qtltab.cc \
    qtltalias.cc \
    qtltedit.cc \
    qtmain.cc \
    qtmclchg.cc \
    qtmem.cc \
    qtmenu.cc \
    qtmenucfg.cc \
    qtmerge.cc \
    qtmodif.cc \
    qtparam.cc \
    qtpfilt.cc \
    qtplace.cc \
    qtprpbase.cc \
    qtprpedit.cc \
    qtprpinfo.cc \
    qtptext.cc \
    qtsel.cc \
    qtstab.cc \
    qttree.cc \
    qtxdraw.cc \
    qtxform.cc \
    qtzoom.cc \
    qtxxx.cc
MOCFILES = \
    moc_main.cpp \
    moc_color.cpp \
    moc_coord.cpp \
    moc_dots.cpp \
    moc_empty.cpp \
    moc_expand.cpp \
    moc_fillp.cpp \
    moc_flatten.cpp \
    moc_htext.cpp \
    moc_join.cpp \
    moc_ltab.cpp \
    moc_ltedit.cpp \
    moc_mclchg.cpp \
    moc_mem.cpp \
    moc_menu.cpp \
    moc_menucfg.cpp \
    moc_merge.cpp \
    moc_modif.cpp \
    moc_param.cpp \
    moc_place.cpp \
    moc_prpedit.cpp \
    moc_prpinfo.cpp \
    moc_sel.cpp \
    moc_stab.cpp \
    moc_xform.cpp \
    moc_zoom.cpp
CCOBJS = $(CCFILES:.cc=.o) $(RESOURCE)
MOCOBJS = $(MOCFILES:.cpp=.o)
LIBOBJS = $(CCOBJS) $(MOCOBJS)

$(LIB_TARGET): $(LIBOBJS)
	@if [ -f $(LIB_TARGET) ]; then \
	    rm -f $(LIB_TARGET); \
	fi
	$(AR) cr $(LIB_TARGET) $(LIBOBJS)
	$(RANLIB) $(LIB_TARGET)

ifeq ($(USEMOZY), yes)
MOZY = ../../../mozy
MOZYINC = -I$(MOZY)/include
MOBJS = qtmain.o

$(MOBJS):
	$(CXX) $(CFLAGS) $(INCLUDE) $(MOZYINC) $(TOOLKITINC) -c $*.cc
endif

.cpp.o:
	$(CXX) -c $(CFLAGS) $(INCLUDE) $(TOOLKITINC) -o $@ $<

.cc.o:
	$(CXX) $(CFLAGS) $(INCLUDE) $(TOOLKITINC) -c $*.cc

moc_main.o: moc_main.cpp  qtmain.h
moc_color.o: moc_color.cpp  qtcolor.h
moc_coord.o: moc_coord.cpp  qtcoord.h
moc_dots.o: moc_dots.cpp  qtdots.h
moc_empty.o: moc_empty.cpp  qtempty.h
moc_expand.o: moc_expand.cpp  qtexpand.h
moc_fillp.o: moc_fillp.cpp  qtfillp.h
moc_flatten.o: moc_flatten.cpp  qlatten.h
moc_htext.o: moc_htext.cpp  qthtext.h
moc_join.o: moc_join.cpp  qtjoin.h
moc_ltab.o: moc_ltab.cpp  qtltab.h
moc_ltedit.o: moc_ltedit.cpp  qtltedit.h
moc_mclchg.o: moc_mclchg.cpp  qtmclchg.h
moc_mem.o: moc_mem.cpp  qtmem.h
moc_menu.o: moc_menu.cpp  qtmenu.h
moc_menucfg.o: moc_menucfg.cpp  qtmenucfg.h
moc_merge.o: moc_merge.cpp  qtmerge.h
