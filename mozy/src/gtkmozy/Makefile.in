#######################################################################
LOCATION = mozy/src/gtkmozy
#######################################################################

DATE = @DATE@

XCFLAGS = -DGTK_DISABLE_SINGLE_INCLUDES -DGDK_DISABLE_DEPRECATED  \
-DGTK_DISABLE_DEPRECATED  -DGSEAL_ENABLE 

CXX = @CXX@
CC = @CC@
CFLAGS = @CFLAGSG@ @TOOLKITCFLAGS@ @UFLAGS@ @WITH_X11@
DEPEND_PROG = @DEPEND_PROG@ @CFLAGSG@ @TOOLKITCFLAGS@
AR = @AR@
RANLIB = @RANLIB@
FILTER = @FILTER@

BASE = ../../../xt_base
INCLUDE = -I../../include -I../../include/gtkmozy -I$(BASE)/include \
  @TOOLKITINC@

LIB_TARGET = ../../lib/gtkmozy.a

HFILES = \
    gtkhelp.h \
    gtkviewer.h

CCFILES = \
    gtkhelp.cc \
    gtkhttpmon.cc \
    gtkviewer.cc

CCOBJS = $(CCFILES:.cc=.o)

$(LIB_TARGET): $(CCOBJS)
	-@rm -f $(LIB_TARGET);
	$(AR) cr $(LIB_TARGET) $(CCOBJS)
	$(RANLIB) $(LIB_TARGET)

.cc.o:
	$(CXX) -c $(CFLAGS) $(INCLUDE) -o $@ $<

clean:
	-@rm -f $(CCOBJS) $(LIB_TARGET)

distclean: clean
	-@rm -f Makefile

depend:
	@echo depending in $(LOCATION)
	@if [ x$(DEPEND_DONE) = x ]; then \
	    echo DEPEND_DONE = 1 >> Makefile; \
	    $(DEPEND_PROG) $(INCLUDE) $(CCFILES) $(FILTER) >> Makefile; \
	fi

install:

uninstall:

#######################################################################
